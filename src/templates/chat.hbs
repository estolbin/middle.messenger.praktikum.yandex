<div class="chat-page">
  <!-- Левая панель с чатами -->
  <div class="chat-list-panel">
    {{> ChatList chats=chats}}
  </div>
  
  <!-- Правая панель с сообщениями -->
  <div class="chat-content">
    <div class="messages-container">
      {{#each messages}}
        {{> Message message=this}}
      {{/each}}
    </div>
    
    {{> MessageInput}}
  </div>
</div>